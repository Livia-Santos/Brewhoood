.wrapper
  .search-form
    = form_tag(profiles_path, :method => "get", id: "search-form", class:"from-group") do
      = text_field_tag :search, params[:search], placeholder: "Search by name", class: "form-control"
      = submit_tag "Search", :name => nil, class: "btn btn-default search-btn"

.text-center
  %h1 Profiles
  .container.col-sm-12.col-md-12
    .row
      - @profiles.each do |profile|
        .col-md-6
          %h4= profile.first_name
          %p= image_tag profile.avatar.url(:thumb)
          %p= profile.country.name
          %p Brewing since: #{profile.brewing_since}
          %br
          = link_to 'Profile', profile, class: "button"
          %hr
          %br
