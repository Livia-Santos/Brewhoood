<h1>Profiles</h1>
<table class="table table-inversive">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th>Country code</th>
      <th>Brewing since</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td scope="row"><%= profile.first_name %></td>
        <td scope="row"><%= image_tag profile.avatar.url(:thumb) %></td>
        <td scope="row"><%= profile.country.name %></td>
        <td scope="row"><%= profile.brewing_since %></td>
        <td scope="row"><%= link_to 'Profile', profile %></td>
      </tr>
    <% end %>
  </tbody>
</tabe>
