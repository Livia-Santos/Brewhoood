<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Avatar</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Addres</th>
      <th>City</th>
      <th>State</th>
      <th>Country code</th>
      <th>Brewing since</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>Instagram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user %></td>
        <td><%= profile.avatar %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.age %></td>
        <td><%= profile.addres %></td>
        <td><%= profile.city %></td>
        <td><%= profile.state %></td>
        <td><%= profile.country_code %></td>
        <td><%= profile.brewing_since %></td>
        <td><%= profile.facebook %></td>
        <td><%= profile.twitter %></td>
        <td><%= profile.instagram %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

